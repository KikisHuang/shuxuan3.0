<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="6dip" />
            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="@color/tab_head_gray"
                android:startColor="@color/tab_head_gray" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:angle="0"
                    android:centerY="0.75"
                    android:endColor="#df0024"
                    android:startColor="#df0024" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="6dip" />
                <gradient
                    android:angle="0"
                    android:centerY="0.75"
                    android:endColor="@color/gradual_change_pink_dominant_tone"
                    android:startColor="@color/pink_dominant_tone" />
            </shape>
        </clip>
    </item>
</layer-list>