<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/module_shape_bg_white_round6"
    android:orientation="vertical"
    tools:ignore="MissingConstraints"
    android:layout_marginHorizontal="20dp">


<!--    <ImageView-->
<!--        android:id="@+id/close_img"-->
<!--        android:layout_width="25dp"-->
<!--        android:layout_height="25dp"-->
<!--        android:layout_margin="15dp"-->
<!--        android:gravity="center"-->
<!--        android:src="@drawable/module_svg_close_green"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="确认取消订单？"
        android:textColor="#202D3B"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="确认取消订单？"
        android:visibility="gone"
        android:textColor="@color/main_tone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="14dp"
        android:layout_marginHorizontal="20dp">
        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_gravity="center"
            android:background="@drawable/module_shape_border_green_6r"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/main_tone"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:background="@drawable/module_bg_main_color_round6"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/confirm"
            android:textColor="@color/white"

            android:textSize="14sp" />

    </LinearLayout>



</LinearLayout>