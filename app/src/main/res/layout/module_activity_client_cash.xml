<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.allen.library.SuperTextView
        android:id="@+id/cash_account_stv"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="30dp"
        app:sLeftIconMarginLeft="25dp"
        app:sLeftIconWidth="@dimen/dp_40"
        app:sLeftIconHeight="@dimen/dp_40"
        app:sLeftTextString="微信"
        app:sLeftTextSize="16sp"
        app:sLeftTextColor="#202D3B"
        app:sRightIconRes="@drawable/module_svg_right_gray_arrow_little"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_center"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_bank_card">
        <TextView
            android:id="@+id/text_rmb_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="45sp"
            android:textColor="@color/gray202"
            android:text="￥"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.gxdingo.sg.view.RegexEditText
            android:id="@+id/et_cash_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:textSize="@dimen/sp_14"
            android:hint="可转出到卡68.26元"
            android:textColorHint="#C6CCE6"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/text_rmb_symbol"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_all"/>
        <TextView
            android:id="@+id/btn_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="全部"
            android:textColor="#A3BC69"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E9ECFC"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:text="@string/confirm_cash"
        android:background="@drawable/module_bg_main_color_round6"
        app:layout_constraintTop_toBottomOf="@+id/cl_center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="60dp"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_weight="1"
        android:background="@drawable/module_shape_bg_gray_2r"/>

</LinearLayout>