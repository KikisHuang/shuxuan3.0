<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="left"
    android:orientation="vertical">

    <TextView
        android:id="@+id/oder_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textColor="#262626"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="您的订单已发出" />

    <ImageView
        android:id="@+id/logistics_logo_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/ic_user_default_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/oder_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/oder_title_tv" />

    <TextView
        android:id="@+id/logistics_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:textColor="@color/graya9a9a9"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/logistics_logo_img"
        app:layout_constraintLeft_toRightOf="@+id/logistics_logo_img"
        app:layout_constraintTop_toTopOf="@+id/logistics_logo_img"
        tools:text="您的订单已发出" />

</androidx.constraintlayout.widget.ConstraintLayout>