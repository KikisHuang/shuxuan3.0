<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="26dp"
    android:background="@color/grayf5"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <include layout="@layout/module_item_chat_time"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:id="@+id/voice_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_im_chat_others_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:paddingRight="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_voice_scrolling"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="10dp"
                 />

            <TextView
                android:id="@+id/tv_voice_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="0â€œ"
                android:textColor="#262626"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/unread_tv"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:background="@drawable/module_shape_bg_unread_red"
            />

    </LinearLayout>
</LinearLayout>