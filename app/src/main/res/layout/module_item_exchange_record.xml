<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/module_shape_bg_white_4r">

    <TextView
        android:id="@+id/logistic_state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="3dp"
        android:paddingHorizontal="13dp"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:background="@drawable/module_shape_bg_exchange_record_logistic_state"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="已发货"/>
    
    <ImageView
        android:id="@+id/commodity_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/logistic_state_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/commodity_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gray_2e"
        app:layout_constraintStart_toEndOf="@+id/commodity_img"
        app:layout_constraintTop_toTopOf="@+id/commodity_img"
        tools:text="玩味系列·双色保温杯"/>

    <TextView
        android:id="@+id/cost_internal_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="16sp"
        android:textColor="#FE9F00"
        app:layout_constraintTop_toBottomOf="@+id/commodity_name_tv"
        app:layout_constraintStart_toStartOf="@+id/commodity_name_tv"
        tools:text="59积分"/>

    <TextView
        android:id="@+id/exchange_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_a9"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/cost_internal_tv"
        app:layout_constraintStart_toStartOf="@+id/cost_internal_tv"
        tools:text="2021-11-24 12:00"/>

    <RelativeLayout
        android:id="@+id/logistic_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="15dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/commodity_img">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_color"/>

        <TextView
            android:id="@+id/logistic_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="物流单号：2131546456879746"
            android:textSize="12sp"
            android:textColor="@color/gray_a9"/>

        <TextView
            android:id="@+id/btn_copy"
            android:layout_width="48dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="复制"
            android:textSize="10sp"
            android:textColor="@color/gray_a9"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/module_shape_border_7e_10r"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>