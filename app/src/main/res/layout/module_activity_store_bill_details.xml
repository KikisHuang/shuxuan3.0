<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/divide_color">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:paddingTop="50dp"
        android:paddingBottom="68dp"
        android:layout_marginHorizontal="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:background="@drawable/module_shape_bg_white_round6"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/transfer_object_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转账给Siwuliu"
            android:textSize="16sp"
            android:textColor="#1F1F1F"/>
        <TextView
            android:id="@+id/amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="168.60"
            android:textSize="26sp"
            android:textColor="#1F1F1F"/>

        <com.allen.library.SuperTextView
            android:id="@+id/pay_method_stv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            app:sLeftTextString="支付方式 "
            app:sLeftViewMarginLeft="20dp"
            app:sLeftTextColor="@color/gray_a9"
            app:sRightTextString="支付宝"
            app:sRightTextColor="@color/gray_2e"
            app:sRightTextSize="14sp" />

        <com.allen.library.SuperTextView
            android:id="@+id/current_status_stv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:sLeftTextString="当前状态"
            app:sLeftViewMarginLeft="20dp"
            app:sLeftTextColor="@color/gray_a9"
            app:sRightTextString="已存入余额"
            app:sRightTextColor="@color/gray_2e"
            app:sRightTextSize="14sp" />


        <com.allen.library.SuperTextView
            android:id="@+id/create_time_stv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:sLeftTextString="创建时间"
            app:sLeftViewMarginLeft="20dp"
            app:sLeftTextColor="@color/gray_a9"
            app:sRightTextString="2021.10.01 08:28"
            app:sRightTextColor="@color/gray_2e"
            app:sRightTextSize="14sp" />

        <com.allen.library.SuperTextView
            android:id="@+id/pay_time_stv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:visibility="visible"
            app:sLeftTextString="支付时间"
            app:sLeftViewMarginLeft="20dp"
            app:sLeftTextColor="@color/gray_a9"
            app:sRightTextString="2021.10.01 08:28"
            app:sRightTextColor="@color/gray_2e"
            app:sRightTextSize="14sp" />
        <com.allen.library.SuperTextView
            android:id="@+id/receive_time_stv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:sLeftTextString="接收时间"
            app:sLeftViewMarginLeft="20dp"
            app:sLeftTextColor="@color/gray_a9"
            app:sRightTextString="2021.10.01 08:28"
            app:sRightTextColor="@color/gray_2e"
            app:sRightTextSize="14sp" />

        <com.allen.library.SuperTextView
            android:id="@+id/payment_time_stv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:sLeftTextString="到账时间"
            app:sLeftViewMarginLeft="20dp"
            app:sLeftTextColor="@color/gray_a9"
            app:sRightTextString="2021.10.01 08:28"
            app:sRightTextColor="@color/gray_2e"
            app:sRightTextSize="14sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/avatar_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/module_svg_client_default_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>