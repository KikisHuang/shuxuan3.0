<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/module_shape_bg_white_round6"
    android:padding="20dp">

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="证件名称"
        android:textColor="@color/gray202"
        app:layout_constraintBottom_toBottomOf="@+id/upload_tv"
        app:layout_constraintTop_toTopOf="@+id/upload_tv" />


    <TextView
        android:id="@+id/upload_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/module_shape_bg_green_25round"
        android:paddingHorizontal="15dp"
        android:paddingVertical="4dp"
        android:text="点击上传"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/qualification_img"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:background="@color/grayf6"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/upload_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>