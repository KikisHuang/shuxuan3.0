<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:paddingRight="20dp"
        android:paddingBottom="16dp"
        android:text="取消"
        android:textColor="#FF2E2E2E"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/module_store_home_search_input_box"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_search_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/module_svg_search_71"
            android:drawablePadding="10dp"
            android:hint="搜索"
            android:imeOptions="actionSearch"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:src="@drawable/module_svg_delete_8914"
            android:visibility="invisible" />
    </LinearLayout>

    <com.donkingliang.labels.LabelsView
        android:id="@+id/search_labels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="25dp"
        app:labelBackground="@drawable/module_store_label_bg"
        app:labelTextColor="@drawable/module_store_label_text_color"
        app:labelTextPaddingBottom="6dp"
        app:labelTextPaddingRight="10dp"
        app:labelTextPaddingLeft="10dp"
        app:labelTextPaddingTop="6dp"
        app:labelTextSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:selectType="SINGLE_IRREVOCABLY"
        app:wordMargin="10dp" />


    <include layout="@layout/module_include_refresh"/>

</LinearLayout>
