<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.gxdingo.sg.activity.ClientActivity"
    tools:ignore="MissingConstraints">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:banner_auto_loop="false"
        app:banner_indicator_marginBottom="70dp"
        app:banner_indicator_normal_color="#8068AA50"
        app:banner_indicator_normal_width="4dp"
        app:banner_indicator_selected_color="#68AA50"
        app:banner_indicator_selected_width="40dp"
        app:banner_indicator_radius="2dp"
        app:banner_indicator_space="4dp"
        app:banner_infinite_loop="false" />


    <TextView
        android:id="@+id/skip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="25dp"
        android:background="@drawable/module_shape_border_cccccc_16r"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:text="@string/skip"
        android:textColor="#CCCCCC"/>

    <Button
        android:id="@+id/go_bt"
        android:layout_width="220dp"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="100dp"
        android:background="@drawable/module_shape_bg_green_25round"
        android:stateListAnimator="@null"
        android:text="@string/experience_immediately"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone" />

</FrameLayout>