<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/divide_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/module_shape_bg_white_round6"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:text="填写商家邀请码"
            android:textSize="29sp"
            android:textColor="#2E2E2E"/>

        <com.gxdingo.sg.view.RegexEditText
            android:id="@+id/invitation_code_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textSize="16sp"
            android:hint="输入邀请码"
            android:textColorHint="@color/gray_a9"
            android:background="@drawable/module_shape_bg_grayf6_25round"/>

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="38dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:text="@string/confirm"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/module_shape_bg_green_25round"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>