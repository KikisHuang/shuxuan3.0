<!--        android:gravity="center"-->
<!--        android:textSize="12sp"-->
<!--        android:textColor="@color/main_tone"-->
<!--        android:background="@drawable/module_shape_border_blue_2r"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/store_name_tv"-->
<!--        app:layout_constraintStart_toStartOf="@+id/store_name_tv"-->
<!--        tools:text="商店"/>-->

    <com.donkingliang.labels.LabelsView
        android:id="@+id/store_label_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:labelBackground="@drawable/module_shape_border_blue_2r"
        app:labelTextPaddingTop="0dp"
        app:labelTextPaddingBottom="0dp"
        app:labelTextPaddingLeft="3dp"
        app:labelTextPaddingRight="3dp"
        app:labelTextSize="12sp"
        app:labelTextColor="@color/main_tone"
        app:selectType="NONE"
        app:layout_constraintTop_toBottomOf="@+id/store_name_tv"
        app:layout_constraintStart_toStartOf="@+id/store_name_tv"/>


    <TextView
        android:id="@+id/distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="12sp"
        android:textColor="#A9A9A9"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@+id/store_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="距离150m"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_color"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>