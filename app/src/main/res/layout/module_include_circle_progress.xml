<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shadow_bg_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black4"></TextView>

    <cn.bingoogolapple.progressbar.BGAProgressBar
        android:id="@+id/circle_progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:padding="15dp"
        android:progress="50"
        app:bga_pb_isHiddenText="true"
        app:bga_pb_mode="circle"
        app:bga_pb_reachedColor="@color/white"
        app:bga_pb_reachedHeight="2dp"
        app:bga_pb_textColor="@color/white"
        app:bga_pb_textMargin="4dp"
        app:bga_pb_textSize="14sp"
        app:bga_pb_unReachedColor="@color/black4"
        app:bga_pb_unReachedHeight="2dp" />

</FrameLayout>