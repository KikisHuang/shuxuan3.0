<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayf6">

    <TextView
        android:id="@+id/hint_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:text="为保障您的账户安全，避免身份信息被盗用，提现需要完成实名认证。"
        android:textColor="@color/red"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/module_shape_bg_white_round6"
        android:padding="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hint_tv"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tag1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:text="上传本人身份证照片"
            android:textColor="@color/gray_2e"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="5dp"
            android:text="1.请上传本人有效身份证证件照 \n2.拍照时请确保身份证边框完整、图像清晰、光线充足"
            android:textColor="@color/graya9a9a9"
            app:layout_constraintTop_toBottomOf="@+id/tag1" />


        <ImageView
            android:id="@+id/front_img"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_bg"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/barrier"
            app:layout_constraintTop_toBottomOf="@+id/hint2" />

        <ImageView
            android:id="@+id/front_check_img"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/module_svg_green_check_ok"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/front_img"
            app:layout_constraintLeft_toLeftOf="@+id/front_img"
            app:layout_constraintRight_toRightOf="@+id/front_img"
            app:layout_constraintTop_toTopOf="@+id/front_img" />


        <LinearLayout
            android:id="@+id/front_upload_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/front_img"
            app:layout_constraintLeft_toLeftOf="@+id/front_img"
            app:layout_constraintRight_toRightOf="@+id/front_img"
            app:layout_constraintTop_toTopOf="@+id/front_img">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/module_svg_add_authentication" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="点击上传"
                android:textColor="@color/blue_text"
                android:textSize="12sp" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="正面照片(人像面)"
            android:textColor="@color/gray_a9"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="@+id/front_img"
            app:layout_constraintRight_toRightOf="@+id/front_img"
            app:layout_constraintTop_toBottomOf="@+id/front_img" />

        <View
            android:id="@+id/barrier"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@+id/hint2"
            app:layout_constraintRight_toRightOf="@+id/hint2"
            app:layout_constraintTop_toBottomOf="@+id/hint2" />

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_bg"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@+id/barrier"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hint2" />

        <ImageView
            android:id="@+id/back_check_img"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/module_svg_green_check_ok"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/back_img"
            app:layout_constraintLeft_toLeftOf="@+id/back_img"
            app:layout_constraintRight_toRightOf="@+id/back_img"
            app:layout_constraintTop_toTopOf="@+id/back_img" />

        <LinearLayout
            android:id="@+id/back_upload_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/back_img"
            app:layout_constraintLeft_toLeftOf="@+id/back_img"
            app:layout_constraintRight_toRightOf="@+id/back_img"
            app:layout_constraintTop_toTopOf="@+id/back_img">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/module_svg_add_authentication" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="点击上传"
                android:textColor="@color/blue_text"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="背面照片(国徽面)"
            android:textColor="@color/gray_a9"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="@+id/back_img"
            app:layout_constraintRight_toRightOf="@+id/back_img"
            app:layout_constraintTop_toBottomOf="@+id/back_img" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp10"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@drawable/module_shape_bg_white_round6"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/top_cl">

        <TextView
            android:id="@+id/name_tg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名"
            android:textColor="@color/graya9a9a9" />

        <EditText
            android:id="@+id/name_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@color/white"
            tools:text="张三"
            android:textColor="@color/graye2e2e2"
            app:layout_constraintBottom_toBottomOf="@+id/name_tg"
            app:layout_constraintLeft_toRightOf="@+id/name_tg"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/name_tg" />


        <TextView
            android:id="@+id/id_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="身份证号"
            android:textColor="@color/graya9a9a9"
            app:layout_constraintTop_toBottomOf="@+id/name_tg" />


        <EditText
            android:id="@+id/idcard_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@color/white"
            android:textColor="@color/graye2e2e2"
            app:layout_constraintBottom_toBottomOf="@+id/id_tag"
            app:layout_constraintLeft_toRightOf="@+id/id_tag"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/id_tag"
            tools:text="985875699874621854" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/hint3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="请确认身份信息，如有错误请修改或重拍"
        android:textColor="@color/gray_a9"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottom_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/submit_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/module_selector_submit_bt"
            android:text="@string/submit"
            android:stateListAnimator="@null"
            android:textColor="@drawable/module_selector_text_color" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>