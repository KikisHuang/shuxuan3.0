<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/dp15"
    android:paddingVertical="@dimen/dp15">


    <FrameLayout
        android:id="@+id/level_fl"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_ranking_level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/level_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="1dp"
            android:text="1"
            android:textColor="@color/yellow_tag"
            android:textSize="17sp"
            android:textStyle="bold" />

    </FrameLayout>


    <ImageView
        android:id="@+id/store_avatar_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="6dp"
        tools:src="@drawable/module_svg_client_default_avatar"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/level_fl"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/store_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/graye2e2e2"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/store_avatar_img"
        app:layout_constraintTop_toTopOf="@+id/store_avatar_img"
        android:text="巴扎黑" />

    <TextView
        android:id="@+id/classify_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:textColor="@color/green68aa50"
        app:layout_constraintBottom_toBottomOf="@+id/store_avatar_img"
        app:layout_constraintLeft_toRightOf="@+id/store_avatar_img"
        app:layout_constraintStart_toStartOf="@+id/store_name_tv"
        android:text="商店 | 水果" />


    <TextView
        android:id="@+id/issue_tab_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="发布"
        android:textColor="@color/graya9a9a9"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/store_name_tv"
        app:layout_constraintRight_toLeftOf="@+id/issue_num_tv"
        app:layout_constraintTop_toTopOf="@+id/store_name_tv" />


    <TextView
        android:id="@+id/issue_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/store_name_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/store_name_tv"
        android:text="206条" />


    <TextView
        android:id="@+id/viwe_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/module_shape_bg_ranking_view"
        android:paddingHorizontal="15dp"
        android:paddingVertical="4dp"
        android:text="查看"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/classify_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/classify_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>