<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayf6"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.gxdingo.sg.activity.ClientActivity"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:id="@+id/top_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/module_shape_bg_white_round6"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注销须知"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/content_one_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="注销店铺需提前7个工作日提交注销申请，提交后等待审核，审核期间各项店铺权限将全部停用  \n \n在提交审核前，与店铺相关的所有交易及投诉纠纷均需处理完结，账户内所有资金全部提现，账户余额为零\n\n注销店铺后，账户内剩余积分将全部自动清零\n\n注销店铺后，需等待15天，方可重新申请入驻，但不视为新店，不可享受及参与各项新店权益及活动"
            android:textColor="#202D3B" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/module_shape_bg_white_round6"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/top_ll">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注销账号存在以下风险"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/content_two_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="清空数据，包括但不限于个人资料、消息内容、转账记录、地址信息等"
            android:textColor="#202D3B" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_submit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bt_ll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <CheckBox
            android:id="@+id/affirmative_cbx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/module_checkbox2_style"
            android:paddingHorizontal="5dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="我已了解并接受注销可能带来的损失"
            android:textColor="@color/gray11"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_bt_ll"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/start_logout_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/module_shape_bg_green_6r"
            android:gravity="center"
            android:text="开始注销"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:background="@drawable/module_shape_bg_gray_f6_6r"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/graya9a9a9"
            android:textSize="15sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/status_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:text="您提交的注销申请正在审核中"
        android:padding="25dp"
        android:textColor="@color/gray202"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>