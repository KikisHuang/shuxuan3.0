<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/module_shape_bg_gray_6r">

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/module_svg_black_close"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="填写商家邀请码"
        android:textColor="@color/gray_2e"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:text="填写商家邀请码"
        android:textColor="@color/gray_a9"/>

    <com.gxdingo.sg.view.RegexEditText
        android:id="@+id/invitation_code_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="60dp"
        android:gravity="center"
        android:hint="输入邀请码"
        android:textSize="14sp"
        android:textColorHint="@color/gray_a9"
        android:background="@drawable/module_shape_bg_white_16r"/>

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="60dp"
        android:gravity="center"
        android:text="@string/confirm"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/module_shape_bg_green_25round"/>

</LinearLayout>