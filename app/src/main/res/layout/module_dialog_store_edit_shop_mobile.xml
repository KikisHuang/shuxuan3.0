<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="22dp"
    android:paddingHorizontal="20dp"
    android:paddingBottom="18dp"
    android:background="@drawable/module_shape_bg_white_round6">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/change_phone_number"
        android:textSize="16sp"
        android:textColor="@color/gray202"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.gxdingo.sg.view.RegexEditText
        android:id="@+id/et_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textSize="14sp"
        android:gravity="start|top"
        android:paddingVertical="8dp"
        android:paddingHorizontal="@dimen/dp10"
        android:background="@drawable/module_shape_bg_gray_6r"
        app:regexType="mobile"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/et_mobile">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="@color/main_tone"
            android:background="@drawable/module_shape_border_green_6r"/>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp10"
            android:background="@drawable/module_bg_main_color_round6"
            android:text="@string/confirm"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>